@model IEnumerable<RegistroNotas.Models.Grupos>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCurso)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCurso)
            </td>
            <td>
                @Html.ActionLink("Ver Cursos", "Edit", new { id = item.IdGrupo }) |
            </td>

        </tr>
    }

</table>
